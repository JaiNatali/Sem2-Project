<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROJECT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROJECT.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&family=Stylish&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header1">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index" style="letter-spacing:2px;"> JKT : MEDIA </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span style="filter:invert()" class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 dropdown-setting" style="justify-content:flex-end">
                        <li class="nav-item">
                            <a class="nav-link text-white cust-1" asp-area="" asp-controller="Home" asp-action="Help">Help</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white cust-1" asp-area="" asp-controller="Home" asp-action="TandC">Term & Conditions</a>
                        </li>
                        @if (Context.Session.GetString("_UserToken") == null)
                        {
                            <li class="nav-item login-btn">
                                <a class="nav-link text-white cust-1 " asp-area="" asp-controller="Home" asp-action="SignIn">Login</a>
                            </li>
                        }
                        else
                        {
                            if (Context.Session.GetString("Admin") != null)
                            {
                                <li class="nav-item login-btn">
                                    <a class="nav-link text-white cust-1 " asp-area="" asp-controller="Home" asp-action="Admin">Controlls</a>
                                </li>
                            }
                            <li class="nav-item login-btn">
                                <a class="nav-link text-white cust-1 " asp-area="" asp-controller="Home" asp-action="LogOut">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer" style="z-index:15;">
            <h3>JKT.Media@gmail.com</h3>
            <h5>+91 962-491-046*</h5>
            <hr class="footerhr">
            <div class="row">
                <ul>
                    <li><a href="mailto:tajju.mistry@gmail.com">Contact us</a></li>
                    <li><a href="#">Our Services</a></li>
                    <li><a href="https://www.termsfeed.com/public/uploads/2021/12/sample-privacy-policy-template.pdf">Privacy Policy</a></li>
                    <li><a style="color:grey;text-decoration:none;" asp-area="" asp-controller="Home" asp-action="TandC">Terms & Conditions</a></li>
                </ul>
            </div>

            <div class="row">
                <p>Copyright © 2024 - All rights are free || Designed By : My Team</p>
                <p> Made with ❤️ and ☕🍵</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script>
        //for navbar transparecy
        const header = document.getElementsByClassName("navbar")[0];
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else if (window.scrollY <= 50) {
                header.classList.remove('scrolled');
            }
        });
    </script>

</body>
</html>
