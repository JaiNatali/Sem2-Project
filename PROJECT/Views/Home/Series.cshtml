@model List<SCardModel>
@{
    ViewData["Title"] = "Series";
}
<br>
<br>
<br>
<link rel="stylesheet" href="~/css/cards - Copy.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="headofContainer">
    <h1>Series</h1>
    <div class="controls">
        <form asp-area="" asp-controller="Home" asp-action="SSort">
            <select name="genre" class="genres">
                <option value="Action">Action</option>
                <option value="Advanture">Advanture</option>
                <option value="Comady">Comady</option>
            </select>
            <button class="s-btn" type="submit"><i class="fa fa-sort-amount-desc" aria-hidden="true"></i></button>
        </form>
        <form asp-area="" asp-controller="Home" asp-action="SSearch">
            <input type="text" name="query" placeholder="Search Movie" />
            <button class="s-btn" type="submit"><i class="fa fa-search"></i></button>
        </form>
    </div>
</div>
<div class="card-container">
    <br>
    <div class="cards" id="cards">
        @if (Model != null)
        {
            @foreach (var i in Model)
            {
                <a asp-area="" asp-controller="Home" asp-action="WatchSeries" asp-route-id="@i.Id" class="card-a">
                    <div class="card" id="card">
                        <img src="@i.ImgSrc" />
                        <div class="content">
                            <h2>@i.Name</h2>
                        </div>
                    </div>
                </a>
            }
        }
        else
        {
            Console.WriteLine("!! Model == Null !!");
        }
    </div>
</div>