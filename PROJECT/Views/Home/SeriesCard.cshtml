@model CombinedViewModel
@{
    ViewData["Title"] = "SeriesCard";
}
@* using copy css file because the original one is useed in other Card *@
<link rel="stylesheet" href="~/css/cards - Copy.css" asp-append-version="true" />
<div class="card-container">
    <br>
    <a class="card-btn" asp-area="" asp-controller="Home" asp-action="AllSeries">More Series</a>
    <br>
    <br>
    <div class="cards" id="cards">
        @if (Model != null)
        {
            int count = 0;
            @foreach (var i in Model.SCardModels)
            {
                <a asp-area="" asp-controller="Home" asp-action="WatchSeries" asp-route-id="@i.Id" class="card-a">
                    <div class="card" id="card">
                        <img src="@i.ImgSrc" />
                        <div class="content">
                            <h2>@i.Name</h2>
                        </div>
                    </div>
                </a>
                count++;
                if(count == 7)
                {
                    break;
                }
            }
        }
        else
        {
            Console.WriteLine("!! Model == Null !!");
        }
    </div>
</div>