@model LoginModel
<style>
    .row1{
        display: flex;
        justify-content: center;
        text-align: center;
        padding: 25px;
        flex-direction: column;
        align-items: center;
        height: 500px;
/*         background: url("https://firebasestorage.googleapis.com/v0/b/fir-362d4.appspot.com/o/images%2Fpexels-jayson-gomes-1455414-3119160.jpg?alt=media&token=def7d02c-1392-402e-b9a1-9f58d301b309");
        background-size: cover; */
    }
    .btn {
        text-decoration: none;
        padding: 10px 25px 10px 25px;
        background: red;
        width: 180px;
        text-align: center;
        margin-left: 15px;
        border: 1px solid black;
        transition: 0.2s;
        color: white;
    }

        .btn:hover {
            transition: 0.2s;
            color: white;
            background: transparent;
            border: 1px solid red;
        }
    
    .Login{
        text-align:center;
        width:300px;
    }

    .Login a{
        text-decoration:none;
        color:white;
    }

    .Login form .form-group input{
        background: transparent;
        color: white;
    }
        .Login form .form-group input:focus{
            border:none;
            border-color:none;
            border-inline-color:none;
        }
</style>
<br><br><br><br>
<div class="row1">
    <h2>L o g i n</h2>
    <br>
    <div class="col-md-4 Login">
        <form asp-action="SignIn">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Enter Your Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter Your Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br>
            <button class="btn">Login</button>
        </form>
        <a asp-action="Registration">Register new User 🥰</a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}